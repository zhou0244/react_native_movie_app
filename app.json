{
  "expo": {
    "name": "react_native_movie_app",
    "slug": "react_native_movie_app",
    "version": "1.0.0",
    "scheme": "https://",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Roboto_Slab/RobotoSlab-Thin.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-ExtraLight.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-Light.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-Regular.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-Medium.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-SemiBold.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-Bold.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-ExtraBold.ttf",
            "./assets/fonts/Roboto_Slab/RobotoSlab-Black.ttf"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#232323",
          "image": "./assets/splash-icon.png",
          "resizeMode": "contain",
          "dark": {
            "image": "./assets/splash-icon-dark.png",
            "resizeMode": "contain",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ]
    ]
  }
}
